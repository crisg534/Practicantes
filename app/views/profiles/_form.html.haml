= form_for @profile do |f|
  -if @profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this profile from being saved:"
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :career_id
    = f.number_field :career_id
  .field
    = f.label :skills
    = f.text_field :skills
  .actions
    = f.submit 'Save'
