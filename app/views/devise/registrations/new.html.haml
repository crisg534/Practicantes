%h2 Sign up
- if  resource.class == Student
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    %div
      = f.label :name
      %br/
      = f.text_field :name
    %div
      = f.label :email
      %br/
      = f.email_field :email
    %div
      = f.label :password
      %br/
      = f.password_field :password
    %div
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation
    %div
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation
    %div
      = f.label :availability
      %br/
      = f.text_field :availability
    %div
      = f.label :college
      %br/
      = f.text_field :college
    %div
      = f.label :phone
      %br/
      = f.text_field :phone
    %div
      = f.label :city_id
      %br/
      = f.collection_select(:city_id, City.all, :id, :name)
    %div= f.submit "Sign up"
- else
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    %div
      = f.label :name
      %br/
      = f.text_field :name
    %div
      = f.label :email
      %br/
      = f.email_field :email
    %div
      = f.label :password
      %br/
      = f.password_field :password
    %div
      = f.label :address
      %br/
      = f.text_field :address
    %div
      = f.label :contact_name
      %br/
      = f.text_field :contact_name
    %div
      = f.label :nit
      %br/
      = f.text_field :nit
    %div
      = f.label :url
      %br/
      = f.text_field :url
    %div= f.submit "Sign up"
= render "devise/shared/links"